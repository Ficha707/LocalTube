<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/splash_background">

    <!-- Анимированный логотип -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_logo_splash"
        android:alpha="0"
        app:tint="@color/splash_accent" />

    <!-- Название приложения -->
    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="LOCALTUBE"
        android:textSize="36sp"
        android:textStyle="bold"
        android:alpha="0"
        android:textColor="@color/splash_text"
        android:fontFamily="sans-serif-condensed" />

    <!-- Подзаголовок/слоган -->
    <TextView
        android:id="@+id/taglineTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Your local YouTube"
        android:textSize="16sp"
        android:alpha="0"
        android:textColor="@color/splash_text_secondary" />

    <!-- Прогресс-бар (опционально) -->
    <ProgressBar
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:indeterminateTint="@color/splash_accent"
        android:indeterminate="true" />

</LinearLayout>